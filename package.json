{
  "name": "we-love-matt",
  "version": "2.0.0",
  "description": "A bot to show Hacktoberfest some love",
  "main": "./prod/index.js",
  "scripts": {
    "prebuild": "rm -rf ./prod",
    "build": "tsc",
    "start": "node -r dotenv/config ./prod/index.js",
    "lint": "eslint src",
    "test": "echo 'No tests at this time. Would you like to contribute some?'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhcarrigan/we-love-matt.git"
  },
  "author": "Nicholas Carrigan",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nhcarrigan/we-love-matt/issues"
  },
  "homepage": "https://github.com/nhcarrigan/we-love-matt#readme",
  "engines": {
    "node": "^15.10.0",
    "npm": "^7.6.0"
  },
  "dependencies": {
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/node": "14.14.39",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
